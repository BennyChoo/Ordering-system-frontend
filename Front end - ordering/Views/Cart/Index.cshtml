@model IEnumerable<QFD.Models.Cart>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Front_end___ordering.styles.css" asp-append-version="true" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-between;
    }

    li {
        display: inline-block;
        height: 30px;
        font-size: 1.3rem;
    }

        li a {
            /* display: block; */
            text-align: center;
            padding: 14px 0px;
            text-decoration: none;
            color: rgb(108,117,125);
        }

    .active {
        color: rgb(40,187,173);
        border-bottom: 3px solid rgb(40,187,173);
    }

    a:hover {
        color: rgb(40,187,173);
    }

    .productName {
        font-weight: bold;
        font-size: 1.4rem;
    }

    .productDescription {
        color: rgb(108,117,125);
        line-height: 18px;
    }

    .productPrice {
        font-size: 1.4rem;
        font-weight: bold;
        color: rgb(40,187,173);
    }

    #navBar {
        padding: 10px 8px;
    }

    .line {
        border-bottom: 1px solid rgb(200,200,200);
        width: 110%;
        left: -10px;
        position: relative;
        margin-bottom: 1rem;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .arrow-icon {
        display: inline-block;
        width: 45px; /* Set the width of your arrow icon */
        height: 45px; /* Set the height of your arrow icon */
        /* Add your arrow icon background image or icon styling */
        margin-right: 0;
    }
    .text {
        flex: 1; /* Allow the text to expand and take available space */
        text-align: center; /* Center align the text */
        position: relative;
        left: -1vw;
    }

    #cartList {
        background-color: rgb(248, 248, 248);
        border-radius: 20px;
    }

    .whiteBg {
        background-color: white;
    }

    .cartPic {
        width: 24vw;
        margin-top: 1vh;
        margin-left: 1vw;
        max-width: 211px;
    }

    .qtyContainer {
        background-color: rgb(203,243,240);
        border-radius: 15px;
        width: 36vw;
        height: 5vh;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    .minusBtn {
        border: none;
        border-radius: 40px;
        background-color: white;
        color: rgb(203,243,240);
        height: 30px;
        width: 30px;
        font-size: 2rem;
    }

    .addBtn {
        border: none;
        border-radius: 40px;
        background-color: black;
        color: white;
        height: 30px;
        width: 30px;
        font-size: 2rem;
    }

    #qtyAndCheckOutContainer {
        padding-left: 2rem;
        padding-right: 1.5rem;
    }

    .bText {
        font-size: 140%;
    }

    body {
        font-size: 2rem;
        padding-left: 3vw;
        padding-right: 3vw;
    }

    .arrow-icon {
        display: flex;
        align-items: center;
    }

    .aIcon {
        width: 8vw;
        max-width: 50px;
    }

    .trashPic {
        width: 6vw;
        max-width: 35px;
        margin-left: 5vw;
    }

    .padLeft {
        padding-left: 1.5vw;
    }

    @@media screen and (max-width: 600px) {
    /* Your styles for screens less than 600px wide go here */
    /* For example: */
    body {
       font-size: 1.2rem;
    }

    /* Adjust other elements as needed */
    .container {
        width: 90%;
    }

    /* Any other styles specific to smaller screens */
    }


</style>

<body class="">
<div class="d-flex justify-content-between mb-4">
    <img src="img/logo.svg" alt="logo" style="font-size: 2rem; padding-top: 0.5rem;" />
    @*<div style="font-size: 2rem;"><i class="bi bi-cart2"></i></div>*@
</div>
<div class="">
    <div class="container ">
        <div class="arrow-icon">
                <img class="aIcon" src="/img/arrow-left.svg">
        </div>
        <div class="text fw-bold bText">My Orders</div>
    </div>

    <div id="cartList" class="pt-2 container">
        <div class="d-flex mb-2 pb-2 w-100 whiteBg">
            <div class="col-4 mr-2">
                <img src="/img/frame-2364.png" alt="" class="cartPic" />
            </div>
            <div class="col-7 padLeft">
                <div class="d-flex flex-column justify-content-center pb-3 col-12" style="font-weight: 500;">
                    <div>Mozarella sticks</div>
                    <div style="color: rgb(40,187,173);">RM 9.90</div>
                </div>
                <div class="d-flex">
                    <div class="qtyContainer col-6">
                        <div class="minusBtn d-flex justify-content-center align-items-center pb-1">-</div>
                        <span id="productQty" style="">1</span>
                        <div class="addBtn d-flex justify-content-center align-items-center pb-1">+</div>
                    </div>
                    <div class="col-2">
                        <img src="/img/trash3.svg" alt="" class="trashPic" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(() => {
            var deductQtyBtn = document.querySelector(".minusBtn")
            var addQtyBtn = document.querySelector(".addBtn")
            var productQty = document.getElementById("productQty")

            deductQtyBtn.addEventListener("click", () => {
                var qty = parseInt(productQty.textContent)

                if (qty > 0) {
                    productQty.textContent = qty - 1;
                }
            })

            addQtyBtn.addEventListener("click",
                () => {
                    var qty = parseInt(productQty.textContent)
                    productQty.textContent = qty + 1;
                });

            document.getElementById("cartIcon").addEventListener("click", function () {
                window.location.href = "cart";
            });
        })
</script>

</body>
</html>